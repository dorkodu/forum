{
  "name": "forum-api",
  "version": "0.0.1",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "ts-node-dev --poll --respawn --quiet src/index.ts",
    "test:unit": "vitest run --dir ./src/test/unit",
    "test:unit:watch": "vitest watch --dir ./src/test/unit",
    "test:integration": "vitest run --dir ./src/test/integration",
    "test:integration:watch": "vitest watch --dir ./src/test/integration",
    "migarete:make": "pnpm knex migrate:make migrate_name -x ts --knexfile ./src/knexfile.ts",
    "migrate:dev:latest": "NODE_ENV=development knex migrate:latest --knexfile ./src/knexfile.ts",
    "migrate:dev:rollback": "NODE_ENV=development knex migrate:rollback --all --knexfile ./src/knexfile.ts",
    "migrate:dev:up": "NODE_ENV=development knex migrate:up --knexfile ./src/knexfile.ts",
    "migrate:dev:down": "NODE_ENV=development knex migrate:down --knexfile ./src/knexfile.ts",
    "migrate:dev:reset": "pnpm migrate:dev:rollback && pnpm migrate:dev:latest",
    "migrate:prod:latest": "NODE_ENV=production knex migrate:latest --knexfile ./dist/knexfile.js",
    "migrate:prod:rollback": "NODE_ENV=production knex migrate:rollback --all --knexfile ./dist/knexfile.js",
    "migrate:prod:up": "NODE_ENV=production knex migrate:up --knexfile ./dist/knexfile.js",
    "migrate:prod:down": "NODE_ENV=production knex migrate:down --knexfile ./dist/knexfile.js",
    "migrate:prod:reset": "pnpm migrate:prod:rollback && pnpm migrate:prod:latest"
  },
  "dependencies": {
    "@dorkodu/sage-server": "^0.1.3",
    "axios": "^1.2.2",
    "bcrypt": "^5.1.0",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "long": "^5.2.1",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.8.0",
    "pg": "^8.8.0",
    "postgres": "^3.3.1",
    "redis": "^4.5.0",
    "ua-parser-js": "^1.0.32",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.14",
    "@types/node": "^18.8.3",
    "@types/node-cron": "^3.0.5",
    "@types/nodemailer": "^6.4.6",
    "@types/ua-parser-js": "^0.7.36",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.4",
    "vitest": "^0.25.1"
  }
}